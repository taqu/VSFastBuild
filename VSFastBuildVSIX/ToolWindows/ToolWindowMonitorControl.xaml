<UserControl x:Class="VSFastBuildVSIX.ToolWindowMonitorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:util="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
             xmlns:catalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
             xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
             xmlns:fbuild="clr-namespace:VSFastBuildVSIX"
             toolkit:Themes.UseVsTheme="True"
             mc:Ignorable="d"
             d:DesignHeight="480"
             d:DesignWidth="960"
             Name="ToolWindowMonitor">
    <DockPanel Margin="0,0,0,0">
        <Grid Height="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <TabControl x:Name="MainTabControl" Height="Auto" VerticalAlignment="Stretch" Grid.Row="0" SelectionChanged="MainTabControll_SelectionChanged">
                <TabItem x:Name="TabItemTimeBar">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16" Width="16" Source="/VSFastBuildVSIX;component/Resources/icon_timeline.png">
                            </Image>
                            <TextBlock Text="TimeLine" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="#FFE5E0E0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" MaxHeight="150"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" MaxWidth="250"/>
                            <ColumnDefinition Width="43"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ScrollViewer x:Name="SystemGraphsScrollViewer" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden" Grid.Row="0" Grid.Column="3" Margin="7,0,20,0" VerticalAlignment="Top" Width="Auto" Height ="Auto">
                            <Canvas x:Name="SystemGraphsCanvas" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="0,0,0,0"/>
                        </ScrollViewer>
                        <ScrollViewer x:Name="TimeBarScrollViewer" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden" Grid.Row="1" Grid.Column="3" Margin="7,2,20,5">
                            <Canvas x:Name="TimeBarCanvas" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="0,0,0,0"/>
                        </ScrollViewer>
                        <ScrollViewer x:Name="EventsScrollViewer" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollChanged="ScrollViewer_ScrollChanged" Margin="10,10,10,0" Grid.Row="2" Grid.Column="3" >
                            <Canvas x:Name="EventsCanvas" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="0,0,0,0"/>
                        </ScrollViewer>
                        <TreeView x:Name="GraphsSelectionTreeView" BorderBrush="LightGray" Visibility =" Hidden" Grid.Row="0" Grid.Column="0" Height="150" Grid.ColumnSpan="3"/>
                        <ScrollViewer x:Name="CoresScrollViewer" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden" Margin="10,10,5,25" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" >
                            <Canvas x:Name="CoresCanvas" HorizontalAlignment="Left" Height="366" VerticalAlignment="Top" Width="148" Margin="0,0,0,0"/>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem x:Name="TabItemOutput">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16" Width="16" Source="/VSFastBuildVSIX;component/Resources/icon_output.png">
                            </Image>
                            <TextBlock Text="Output" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="#FFE5E0E0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="53*"/>
                            <ColumnDefinition Width="118*"/>
                            <ColumnDefinition Width="19*"/>
                            <ColumnDefinition Width="764*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <ComboBox x:Name="OutputWindowComboBox" ItemsSource="{Binding FASTBuildMonitorControl._outputComboBoxFilters}" DisplayMemberPath="_name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="330" Grid.Row="0" HorizontalContentAlignment="Left" Grid.ColumnSpan="4" Grid.RowSpan="2"/>
                        <Label x:Name="label" Content="Press (SPACE) to reset filter" Foreground="Black" HorizontalAlignment="Left" Margin="155,10,0,0" VerticalAlignment="Top" Width="155" Grid.Row="0" Grid.Column="3" Grid.RowSpan="2"/>
                        <TextBox x:Name="OutputTextBox" AcceptsReturn="True" Foreground="Black" Background="#FFE5E0E0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Grid.Row="1" Margin="5,5,5,5" Grid.ColumnSpan="4"/>
                    </Grid>
                </TabItem>
                <TabItem x:Name="TabItemSettings">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16" Width="16" Source="/VSFastBuildVSIX;component/Resources/icon_settings.png">
                            </Image>
                            <TextBlock Text="Settings"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="#FFE5E0E0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" MinHeight="102"/>
                        </Grid.RowDefinitions>
                        <GroupBox x:Name="SettingsGroupBox" Header="Settings" Foreground="Black" Background="#FFE5E0E0" BorderBrush="Gray" HorizontalAlignment="Left" Margin="26,0,0,0" VerticalAlignment="Top" Height="51" Width="165">
                            <CheckBox x:Name="SettingsGraphsCheckBox" Content ="Show System Graphs" Foreground="Black" Background="White" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" />
                        </GroupBox>
                    </Grid>
                </TabItem>

            </TabControl>
            <StatusBar Height="25" VerticalAlignment="Bottom" Grid.Row="1" Background="#FFDADADA">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem Margin="0,-2,0,2" Background="LightGray">
                    <fbuild:GIFImage x:Name="StatusBarRunningGif" GifSource="Icon_animated" AutoStart="False" Margin="0,5,0,0" Width="20" Height="20" VerticalAlignment="Top"/>
                </StatusBarItem>
                <StatusBarItem Grid.Column="1" Background="LightGray">
                    <TextBlock x:Name="StatusBarBuildStatus" Foreground="Black" Text =""/>
                </StatusBarItem>
                <Separator BorderBrush="Gray" Grid.Column="2" />
                <StatusBarItem Grid.Column="3" Background="LightGray">
                    <TextBlock x:Name="StatusBarDetails" Foreground="Black" Text =""/>
                </StatusBarItem>
                <Separator BorderBrush="Gray" Grid.Column="4" />
                <StatusBarItem Grid.Column="5" Background="LightGray">
                    <TextBlock x:Name="StatusBarBuildTime" Foreground="Black" Text =""/>
                </StatusBarItem>
                <Separator BorderBrush="Gray" Grid.Column="6" />
                <StatusBarItem Grid.Column="7" Background="LightGray">
                    <ProgressBar x:Name="StatusBarProgressBar" Value="0" Width="90" Height="16" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </DockPanel>
</UserControl>
